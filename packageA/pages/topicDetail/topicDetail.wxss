.top-image-text .title{
  position: absolute;
  transform: translateY(-50%);
  left: 0;
  top: 50%;
  width: 100%;
  text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.29);
  font-weight: bold;
  text-align: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #fff;
  font-size: 40rpx;
}
.top-image-text .title .top{
  width: 118rpx;
  height: 118rpx;
  display: block;
  margin: 0 auto 20rpx
}
.top-image-text .title .bottom{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.top-image-text {
  position: relative;
}

.top-image-text .top-image {
  width: 100%;
  height: 398rpx;
  display: block

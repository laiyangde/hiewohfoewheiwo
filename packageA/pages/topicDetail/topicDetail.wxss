.top-image-text .counts{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
}
.top-image-text .counts>view{
  flex: 1;
  height: 48rpx;
  justify-content: center;
  align-items: center;

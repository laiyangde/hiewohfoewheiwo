.author-album-list .album-name{
  font-size: 28rpx;
  color: #949494;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 16rpx;
}
.author-album-item{
  position: relative;
  margin-top: 40rpx;
}
.author-album-item:first-child{
  margin-top: 10rpx;
}
.more-mask{
  position: absolute;
  width: 230rpx;
  height: 410rpx;
  bottom: 16rpx;
  right: 16rpx;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}
.more-mask text{
  color: #fff;
  font-size: 32rpx;
  display: block;
  line-height: 50rpx;
}
.ipx .more-mask{
  height: 498rpx;
}
<!--pages/address/address.wxml-->
<form bindsubmit="formSubmit" class='{{model}}' style='padding-top:{{suspensionInfo.statusBarHeight}}px'>
   <view class='info-container header-seize'>
       <view class='realName input-item'>
        <text>姓名</text>
        <input value='{{realName}}' auto-focus name="realName"/>
      </view>
      <view class='tel input-item'>
        <text>手机号</text>
        <input value='{{tel}}' name="tel" type='number'/>
      </view>
      <view class='weixin input-item'>
        <text>微信号</text>
        <input value='{{weixin}}' name="weixin"/>
      </view>
       <view class='address'>
        <text>联系地址</text>
        <textarea name="address" value='{{address}}'></textarea>
      </view>  
  </view> 
  <button formType="submit" class='save-submit' hover-class='none'>保存提交</button>
</form>